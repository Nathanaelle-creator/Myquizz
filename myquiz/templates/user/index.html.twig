{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<style>
    body {
        background-color: #2B4570;
        margin: 0;
        font-family: sans-serif;
    }

    .nav-bar {
        display: flex;
        justify-content: flex-end;
        gap: 2em;
        background-color: #7180AC;
        padding: 1em;
    }

    .nav-bar a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        padding: 0.5em 1em;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .nav-bar a:hover {
         background-color: #E49273;
    }
  
    .account-info ul {
    list-style-type: none;
    padding-left: 0;
    }
    .example-wrapper {
        margin: 2em auto;
        max-width: 800px;
        width: 95%;
        color:white;
    }

    .account-info  {
        background-color: rgba(255, 255, 255, 0.05);
        padding: 1em;
        border-radius: 8px;
        margin-top: 2em;
    }

    .account-info h2 {
        margin-top: 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        padding-bottom: 0.5em;
    }
   .example-wrapper .account-info a {
    color: #E49273;
    text-decoration: none; 
    font-weight: bold;
    }

    .example-wrapper .account-info a:hover {
    color: #ff6666;
    }
    .example-wrapper h1 a {
    text-decoration: none; 
    font-weight: bold;
    color:white;
    }
    .account-info {
    background-color: rgba(255, 255, 255, 0.05);
    padding: 1em;
    border-radius: 8px;
    overflow-x: auto; 
}

.account-info table {
    width: 100%; 
    color: white;
}

.account-info th,
.account-info td {
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}
</style>
<div class="nav-bar">
    <a href="{{ path('home') }}">Home</a>
    <a href="{{ path('app_account') }}">Compte</a>
    <a href="{{ path('app_logout') }}">Logout</a>
      {% if app.user %}
    <a href="{{ path('app_user_index') }}">âž•Admin</a>
    {% endif %}
</div>
<div class="example-wrapper">
    <h1>Utilisateur</h1>
    <h1>
    <a href="{{ path('app_categorie_index') }}">Categorie</a>
    </h1>
     
<div class="account-info"> 
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Username</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
 </div>
</div>
{% endblock %}
